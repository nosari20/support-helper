<Page x:Class="SupportHelper.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SupportHelper.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage"
      Loaded="ContentLoaded">

    <Grid>
        <StackPanel Margin="10,5,10,5">

            <StackPanel  Orientation="Horizontal">
                <Label Content="Name:" FontWeight="Bold" />
                <Label Content="" Name="LABEL_NAME" />
            </StackPanel>
            <StackPanel  Orientation="Horizontal">
                <Label Content="Feature Update:" FontWeight="Bold" />
                <Label Content="" Name="LABEL_VERSION" />
            </StackPanel>
            <StackPanel>
                <Label Content="Quality Update:" FontWeight="Bold" />
                <Label  xml:space="preserve" Content="" Name="LABEL_PATCH" FontFamily="Consolas"/>
                </StackPanel>
            <StackPanel>
                <Label Content="Users:" FontWeight="Bold" />
                <Label  xml:space="preserve" Content="" Name="LABEL_USERS" FontFamily="Consolas"/>
             </StackPanel>

        </StackPanel>

    </Grid>
</Page>
